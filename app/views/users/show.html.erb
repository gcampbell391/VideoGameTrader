<div class="headerbg">
<h1>Welcome <%= @user.user_name %> </h1>
</div>

<div class="showleftside">
<%= image_tag "mod2image1.jpeg", class: 'showimage' %>

<h3>Personal Info</h3>
<ul>
    <li>Name: <%= @user.name %></li>
    <li>Address: <%= @user.address %></li>
    <li>Email: <%= @user.email %></li>
</ul>

<%= button_to "Edit Info", "/users/#{@user.id}/edit",:class => "showbtn1", method: :get %><br>
<%= button_to "Destroy Account", "/users/#{@user.id}/destroy",:class => "showbtn2", method: :delete %><br>
<%= button_to "Log Out", "/logout",:class => "showbtn1", method: :get %>
</div>


<div class="showrightside">
<h3><%= @user.name %> owns this many games: <%= @user.video_game_count %></h3>
<%= button_to "All Games", "/games",:class => "showbtn1", method: :get %><br>
<%= button_to "Add Game", "/#{@user.id}/addgame",:class => "showbtn2", method: :get %> <br>
<%= button_to "Remove Game", "/#{@user.id}/removegame",:class => "showbtn1", method: :get %>

<% if @user.user_video_games %>
    <h3>Current Collection</h3>
    <ul>
    <% @user.user_video_games.each do |uvg|%>
        <li><%= link_to uvg.game.title, "/games/#{uvg.game.id}" %><br>
            <ul>
                <li>Up For Trade? <%= uvg.yes_or_no %></li><br>
            </ul>
<% end%>
    </ul>
<% end %>
<%= button_to "Looking For Trades?", "/users/all",:class => "showbtn2", method: :get %><br>
</div>


<div class="showbottom">
<h3><%= @user.name %> owns this many platforms: <%= @user.platform_count %></h3>

<%= button_to "All Platforms", "/platforms/",:class => "showbtn1", method: :get %><br>
<%= button_to "Add Platform", "/#{@user.id}/addplatform",:class => "showbtn2", method: :get %><br>
<%= button_to "Remove Platform", "/#{@user.id}/removeplatform",:class => "showbtn1", method: :get %>

<% if @user.user_platforms %>
<h3>Owned platforms </h3>
    <ul>
    <% @user.user_platforms.each do |up|%>
        <li><%= link_to up.platform.name, "/platforms/#{up.platform.id}" %><br><br>
<% end%>
    </ul>
<% end %>
</div>


